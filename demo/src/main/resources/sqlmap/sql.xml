<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.EmpMapper">

	<!-- DML : SELECT,INSERT,UPDATE,DELETE -->

	<!-- id는 mapper에 있는 메소드이름과 동일, 리턴타입은 VO 클래스!~ -->
	<select id="selectEmp" resultType="com.example.demo.vo.EmpVO">
		SELECT * FROM emp
	</select>
	
	<!-- * : 아스테리크스 -->
	<select id="selectDept" resultType="com.example.demo.vo.DeptVO">
		SELECT * FROM dept
	</select>

	<!-- insert, update, delete는 retultType int -->
	<insert id="insertEmp">
		INSERT INTO emp 
		(
			empno,
			ename,
			job,
			sal
		)
		VALUES
		(
			#{empno},
			#{ename},
			#{job},
			#{sal}
		)
	</insert>
	
	<delete id="deleteEmp">
		DELETE FROM emp
		WHERE empno = #{empno}
	</delete>
	
	<update id="updateEmp">
		UPDATE emp
		SET 
			sal = #{sal},
			job = #{job}
		WHERE empno = #{empno}
	</update>	


	<!-- 회원가입 SQL 작성 -->
	<insert id="insertUsers">
		INSERT INTO users
		(
			id,
			pw,
			name
		)
		VALUES
		(
			#{id},
			#{pw},
			#{name}
		)
	</insert>

	<!-- count는 int형으로 리턴 -->
	<select id="selectUsersFindById" resultType="integer">
		SELECT 
			COUNT(*)
		FROM users 
		WHERE id = #{id} 
		<if test="pw != null">
			AND pw = #{pw}
		</if>
	</select>


	<select id="selectUsersPassword" resultType="com.example.demo.vo.UsersVO">
		SELECT
			id,
			pw,
			name
		FROM users
		WHERE id = #{id}
	</select>


</mapper>